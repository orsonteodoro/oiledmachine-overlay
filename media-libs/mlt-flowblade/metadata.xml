<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="project">
    <!-- Ebuild originators -->
    <email>media-video@gentoo.org</email>
    <name>Gentoo Video Project</name>
  </maintainer>
  <maintainer type="project">
    <!-- Ebuild originators -->
    <email>kde@gentoo.org</email>
    <name>Gentoo KDE Project</name>
  </maintainer>
  <use>
    <flag name="frei0r">
      Expose support for frei0r-plugins.
    </flag>
    <flag name="opencv">
      Build the motion tracking module.
    </flag>
    <flag name="python">
      Build SWIG bindings for Python
    </flag>
    <flag name="rtaudio">
      Builds rtaudio consumer for native audio support on multiple platforms
    </flag>
    <flag name="sdl">
      Build support for libsdl
    </flag>
    <flag name="sdl2">
      Build support for libsdl2
    </flag>
    <flag name="rubberband">
      Enable audio pitch-shifting.
    </flag>
    <flag name="vidstab">
      Enable video stabilization.
    </flag>
    <!--
      <flag name="swfdec">
        Use <pkg>media-libs/swfdec</pkg> for reading Flash .swf files instead
        of libavformat.
      </flag>
      <flag name="java">
        Build SWIG bindings for Java
      </flag>
      <flag name="perl">
        Build SWIG bindings for Perl
      </flag>
      <flag name="php">
        Build SWIG bindings for PHP
      </flag>
      <flag name="tcl">
        Build SWIG bindings for TCL
      </flag>
    -->
  </use>
  <upstream>
    <remote-id type="github">mltframework/mlt</remote-id>
    <remote-id type="sourceforge">mlt</remote-id>
  </upstream>
</pkgmetadata>
