<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild fork on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <maintainer type="project">
    <!-- Ebuild originator -->
    <email>gstreamer@gentoo.org</email>
    <name>GStreamer package maintainers</name>
  </maintainer>
  <upstream>
    <remote-id type="cpe"> cpe:/a:freedesktop:gst-plugins-bad</remote-id>
  </upstream>
  <use>
    <flag name="bzip2">
      Enable bzip2 encoder/decoder plugin
    </flag>
    <flag name="egl">
      Enable EGL support
    </flag>
    <flag name="gles2">
      Enable GLES2 support
    </flag>
    <flag name="vaapi">
      Enable stateless VA-API decoding only support.

      For VA-API encoding support, use either

        <pkg>media-plugins/gst-plugins-vaapi</pkg>

      or

        <pkg>media-plugins/gst-plugins-libva</pkg> with 
        <pkg>media-video/ffmpeg[vaapi]</pkg>.

    </flag>
  </use>
</pkgmetadata>
