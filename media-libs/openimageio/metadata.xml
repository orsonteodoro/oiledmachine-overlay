  <use>
    <flag name="color-management">
      Enable color management via <pkg>media-libs/opencolorio</pkg>
    </flag>
    <flag name="dicom">
      Enable DICOM medical image file support via <pkg>sci-libs/dcmtk</pkg>
    </flag>
    <flag name="field3d">
      Enable f3d file (write) support via <pkg>media-libs/Field3D</pkg>
    </flag>
    <flag name="opencv">
      Enable OpenCV support via <pkg>media-libs/opencv</pkg>
    </flag>
    <flag name="ptex">
      Enable Ptex texture mapping system file support via
      <pkg>media-libs/ptex</pkg>
    </flag>
  </use>
  <!--

    oiledmachine-overlay notes:

    The purpose of this ebuild fork is to ensure consistency between Blender or
    its dependencies, or meet the minimum requirements of Blender.

  -->
  <upstream>
    <remote-id type="github">OpenImageIO/oiio</remote-id>
  </upstream>
</pkgmetadata>
