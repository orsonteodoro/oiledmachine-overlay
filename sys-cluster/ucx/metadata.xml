<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <maintainer type="project">
    <!-- Ebuild originator -->
    <email>cluster@gentoo.org</email>
    <name>Gentoo Cluster Project</name>
  </maintainer>
  <!--

  oiledmachine-overlay notes:

  Ebuild forked to enable ROCm support and full capabilities.

  -->
  <use>
    <flag name="clang">
      Use Clang for OpenMP support
    </flag>
    <flag name="cma">
      Use CMA (Cross Memory Attach) for shared memory transport betweeen
      intra-nodes.
    </flag>
    <flag name="cuda">
      Support CUDA® for NVIDIA GPUs
    </flag>
    <flag name="custom-kernel">
      Allow for custom kernels.
      (If dmabuf is enabled, you are responsible for providing a 5.12 or
      later kernel)
    </flag>
    <flag name="dc">
      Support IB DC (Dynamically Connected) transport
    </flag>
    <flag name="dmabuf">
      Support zero-copy RDMA
    </flag>
    <flag name="devx">
      Support DEVX
    </flag>
    <flag name="dm">
      Support Device Memory
    </flag>
    <flag name="examples">
      Build examples
    </flag>
    <flag name="fuse3">
      Support instrumentation and monitoring at runtime via FUSE 3
    </flag>
    <flag name="gcc">
      Use GCC for OpenMP support
    </flag>
    <flag name="gdrcopy">
      Support gdrcopy for NVIDIA® GPUs to enable low latency CPU to GPU data
      transfer capability for small data transfers.
    </flag>
    <flag name="hip-clang">
      Use HIP-Clang for OpenMP support
    </flag>
    <flag name="kmem">
      Use kmem for shared memory transport betweeen intra-nodes.
    </flag>
    <flag name="mlx5-dv">
      Add support for mlx5 Direct Verbs support
    </flag>
    <flag name="numa">
      Add support for numa memory allocation
    </flag>
    <flag name="openmp">
      Add support for OpenMP
    </flag>
    <flag name="rc">
      Support IB RC (Reliable Connected) transport
    </flag>
    <flag name="rdma">
      Support GDR (GPUDirect® RDMA)
    </flag>
    <flag name="roce">
      Support for RoCE/IBoE.
    </flag>
    <flag name="rocm">
      Support ROCm™ for AMD GPUs.
    </flag>
    <flag name="threads">
      Enable multi threading support
    </flag>
    <flag name="tm">
      Support IB Tag Matching
    </flag>
    <flag name="ud">
      Support IB UD (Unreliable Datagram) transport
    </flag>
    <flag name="video_cards_intel">
      Support Intel® GPUs
    </flag>
    <flag name="verbs">
      Support InfiniBand™ Verbs
    </flag>
    <flag name="xpmem">
      Use xpmem for shared memory transport betweeen intra-nodes.
    </flag>
  </use>
  <upstream>
    <doc>
      https://openucx.org/documentation/
      https://github.com/openucx/ucx/wiki/Instrumentation-and-monitoring-tool
    </doc>
    <remote-id type="github">openucx/ucx</remote-id>
  </upstream>
</pkgmetadata>
