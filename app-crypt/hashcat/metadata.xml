<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild originator -->
    <email>zerochaos@gentoo.org</email>
    <name>Rick Farina</name>
  </maintainer>
  <use>
    <flag name="brain">
      Enable the hashcat brain
    </flag>
    <flag name="cuda">
      Use CUDA® directly.
    </flag>
    <flag name="intel-opencl-cpu-runtime">
      Use the closed source OpenCL™ CPU Runtime driver for Intel® Core™ and
      Intel® Xeon®.
    </flag>
    <flag name="pocl">
      Use the open source and portable OpenCL™ driver for x86, ARM, RISC-V,
      CUDA®.
    </flag>
    <flag name="orca">
      Use the closed source OpenCL™ driver for pre Vega.
    </flag>
    <flag name="rocm">
      Use the open source OpenCL™ driver.

      PCIe atomics required.
    </flag>
  </use>
  <upstream>
    <remote-id type="github">hashcat/hashcat</remote-id>
  </upstream>
</pkgmetadata>
