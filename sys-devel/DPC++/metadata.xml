<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <maintainer type="project">
    <!-- Ebuild originator -->
    <email>sci@gentoo.org</email>
    <name>Gentoo Science Project</name>
  </maintainer>
  <upstream>
    <remote-id type="github">intel/llvm</remote-id>
  </upstream>
  <use>
    <flag name="cfi">
      If enabled with Clang, builds with sofware based Control-Flow Integrity.
      If enabled with GCC, builds with hardware assisted Control-flow
      Enforcement Technology (CET) with protection to branches and returns.

      It implies enabling hardened flags.
    </flag>
    <flag name="cuda">
      Use the CUDA backend
    </flag>
    <flag name="esimd_emulator">
      Enable ESIMD CPU emulation
    </flag>
    <flag name="hardened">
      Builds with FORTIFY_SOURCE=2 and Full RELRO
    </flag>
    <flag name="hip">
      Use the HIP backend
    </flag>
    <flag name="sycl-fusion">
      Enable the JIT kernel fusion compiler
    </flag>
  </use>
</pkgmetadata>
