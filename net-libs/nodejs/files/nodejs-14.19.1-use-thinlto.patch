             reordering''')
 
-  if options.node_section_ordering_info != "":
+  if options.node_section_ordering_info != "" and options.with_thinlto == None:
     o['variables']['node_section_ordering_info'] = os.path.realpath(
       str(options.node_section_ordering_info))
   else:
