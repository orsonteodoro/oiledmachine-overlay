<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild originators -->
    <email>chutzpah@gentoo.org</email>
    <name>Patrick McLean</name>
  </maintainer>
  <upstream>
    <remote-id type="github">open-telemetry/opentelemetry-cpp</remote-id>
  </upstream>
  <use>
    <flag name="otlp-file">
      Include the OTLP file exporter
    </flag>
    <flag name="otlp-grpc">
      Include the OTLP gRPC exporter
    </flag>
    <flag name="otlp-http">
      Include the OTLP HTTP exporter
    </flag>
    <flag name="prometheus">
      Include the Prometheus Client in the SDK
    </flag>
    <flag name="zlib">
      Enable GZIP compression for the HTTP exporter
    </flag>
  </use>
</pkgmetadata>
