diff '--color=auto' -urp magma-2.8.0.orig/make.inc-examples/make.inc.atlas magma-2.8.0/make.inc-examples/make.inc.atlas
--- magma-2.8.0.orig/make.inc-examples/make.inc.atlas	2024-08-10 15:14:03.266319576 -0700
+++ magma-2.8.0/make.inc-examples/make.inc.atlas	2024-08-10 15:17:03.543332471 -0700
@@ -6,6 +6,20 @@
 #      @date March 2024
 #//////////////////////////////////////////////////////////////////////////////
 
+# should MAGMA be built on CUDA (NVIDIA only) or ROCM (AMD or NVIDIA)
+# enter 'cuda' or 'hip' respectively
+BACKEND   ?= hip
+@BACKEND_OVERRIDE@
+
+# set these to their real paths
+ROCM_PATH ?= /opt/rocm-@ROCM_VERSION@
+CUDADIR   ?= /opt/cuda
+
+# require either hip or cuda
+ifeq (,$(findstring $(BACKEND),hip cuda))
+    $(error "'BACKEND' should be either 'cuda' or 'hip' (got $$BACKEND=$(BACKEND))")
+endif
+
 # GPU_TARGET contains one or more of Fermi, Kepler, Maxwell, Pascal, Volta, Turing, or Ampere
 # to specify for which GPUs you want to compile MAGMA:
 #     Fermi          - NVIDIA compute capability 2.x cards
@@ -19,14 +32,23 @@
 # Note that NVIDIA no longer supports 1.x cards, as of CUDA 6.5.
 # See http://developer.nvidia.com/cuda-gpus
 #
-GPU_TARGET ?= Volta Turing Ampere
+ifeq ($(BACKEND),cuda)
+    GPU_TARGET ?= Volta Turing Ampere
+else ifeq ($(BACKEND),hip)
+    GPU_TARGET ?= gfx900 gfx906 gfx908
+endif
 @GPU_TARGET_OVERRIDE@
 
 # --------------------
 # programs
 
-CC        = gcc
-CXX       = g++
+ifeq ($(BACKEND),cuda)
+    CC        = gcc
+    CXX       = g++
+else ifeq ($(BACKEND),hip)
+    CC        = hipcc
+    CXX       = hipcc
+endif
 NVCC      = nvcc
 FORT      = gfortran
 
@@ -67,7 +89,11 @@ CFLAGS   += -std=c99
 # gfortran is for GNU gfortran Fortran
 LIB       = -llapack -lf77blas -latlas -lstdc++ -lsvml -lgfortran -lifcore -lm
 
-LIB      += -lcublas -lcusparse -lcudart -lcudadevrt
+ifeq ($(BACKEND),cuda)
+    LIB      += -lcublas -lcusparse -lcudart -lcudadevrt
+else ifeq ($(BACKEND),hip)
+    LIB      += -lcublas -lcusparse -lcudart -lcudadevrt
+endif
 
 
 # --------------------
@@ -78,10 +104,19 @@ LIB      += -lcublas -lcusparse -lcudart
 #ATLASDIR  ?= /usr
 #CUDADIR   ?= /opt/cuda
 -include make.check-atlas
--include make.check-cuda
 
-LIBDIR    = -L$(CUDADIR)/@ABI_LIBDIR@ \
-            -L$(LAPACKDIR) \
-            -L$(ATLASDIR)/@ABI_LIBDIR@
+ifeq ($(BACKEND),cuda)
+    -include make.check-cuda
+    LIBDIR    = -L$(CUDADIR)/@ABI_LIBDIR@ \
+                -L$(LAPACKDIR) \
+                -L$(ATLASDIR)/@ABI_LIBDIR@
+
+    INC       = -I$(CUDADIR)/include
+else ifeq ($(BACKEND),hip)
+    -include make.check-hip
+    LIBDIR    = -L$(ROCM_PATH)/@ROCM_LIBDIR@ \
+                -L$(LAPACKDIR) \
+                -L$(ATLASDIR)/@ABI_LIBDIR@
 
-INC       = -I$(CUDADIR)/include
+    INC       = -I$(ROCM_PATH)/include
+endif
