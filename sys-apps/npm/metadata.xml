<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <upstream>
    <remote-id type="cpe">cpe:/a:npmjs:npm</remote-id>
    <remote-id type="github">npm/cli</remote-id>
    <bugs-to>https://github.com/npm/cli/issues</bugs-to>
  </upstream>
  <use>
    <flag name="ssl">
      Required for remote downloads.  Otherwise, offline install is assumed.
    </flag>
  </use>
  <slots>
    <slot name="0">
      Older ebuilds (not-supported)
    </slot>
    <slot name="1">
      For lockfile v1 support.
    </slot>
    <slot name="2">
      For lockfile v1-v2 (inclusive-inclusive) support.
    </slot>
    <slot name="3">
      For lockfile v2-v3 (inclusive-inclusive) support.
    </slot>
    <subslots>
      The semver major.minor
    </subslots>
  </slots>
</pkgmetadata>
