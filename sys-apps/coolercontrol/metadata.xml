<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <upstream>
    <remote-id type="gitlab">coolercontrol/coolercontrol</remote-id>
    <bugs-to>https://gitlab.com/coolercontrol/coolercontrol/-/issues</bugs-to>
  </upstream>
  <!--

  Build time per-package environment variables:

  COOLERCONTROL_BROWSER - The default web browser or www launcher command.

  -->
  <use>
    <flag name="html">
      Use the web browser to access the CoolerControl web app from the daemon.
    </flag>
    <flag name="hwmon">
      Add support for CPU and motherboard fan/temperature monitoring.
    </flag>
    <flag name="liqctld">
      Add liquidctl device support for AIOs, USB fan hubs, etc.
    </flag>
    <flag name="qt6">
      Use the standalone desktop application (i.e. a limited web browser that
      opens the web app from the dameon).
    </flag>
  </use>
</pkgmetadata>
