#!/bin/bash

function exit_error() {
	local msg="${1}"
	if [[ -n "${DISPLAY}" ]] ; then
		if which zenity >/dev/null ; then
			zenity --error --text="${msg}"
		elif which kdialog >/dev/null ; then
			kdialog --msgbox "${msg}"
		else
			echo "${msg}"
		fi
	else
		echo "${msg}"
	fi
	exit 1
}

groups | grep video > /dev/null
if [[ "$?" != "0" ]] ; then
	exit_error "User must be in the video group"
fi

if which wmname >/dev/null ; then
	wmname LG3D
fi

mkdir -p "${HOME}/.cache/sheepit-client"
java -jar /usr/share/sheepit-client/sheepit-client-all.jar -cache-dir "${HOME}/.cache/sheepit-client" $*
