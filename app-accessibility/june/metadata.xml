<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <!--

  oiledmachine-overlay notes:

  Environment variables:

    JUNE_DEFAULT_MODEL - Sets the default Ollama model.
    Default:  llama3.1:8b-instruct-q4_0

  Wrapper environment variables

    MODEL - Sets the LLM model overriding the default.

    OLLAMA_HOST - Sets the URI to the Ollama server.
    Default:  http://localhost:11434

  -->
  <upstream>
    <bugs-to>https://github.com/mezbaul-h/june/issues</bugs-to>
    <changelog>https://github.com/mezbaul-h/june/blob/main/CHANGELOG</changelog>
    <remote-id type="github">mezbaul-h/june</remote-id>
  </upstream>
  <use>
    <flag name="alsa">
      Use ALSA for audio output and/or microphone.
    </flag>
    <flag name="sndio">
      Use sndio for audio output.
    </flag>
    <flag name="nas">
      Use NAS for audio output.
    </flag>
    <flag name="jack">
      Use JACK for audio output and/or microphone.
    </flag>
    <flag name="oss">
      Use OSS for audio output and/or microphone.
    </flag>
    <flag name="pipewire">
      Use PulseAudio for audio output.
    </flag>
    <flag name="pulseaudio">
      Use PulseAudio for audio output and/or microphone.
    </flag>
  </use>
</pkgmetadata>
