<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <longdescription>

    Environment variables

    CARBON_NOW_BROWSER_PATH - Set to the absolute path to a Chromium based web
    browser.

  </longdescription>
  <upstream>
    <bugs-to>https://github.com/mixn/carbon-now-cli/issues</bugs-to>
    <remote-id type="github">mixn/carbon-now-cli</remote-id>
  </upstream>
  <use>
    <flag name="custom-browser">
      Allow to untether *DEPENDs to use an alternative browser package based
      on Chromium.
    </flag>
    <flag name="chromium">
      Use chromium as the backend.  (Stable)
    </flag>
    <flag name="chromium-with-symbols">
      Use chromium-with-symbols as the backend.  (Stable debug)
    </flag>
    <flag name="chromium-tip-of-tree">
      Use chromium-tip-of-tree as the backend.  (Dev)
    </flag>
    <flag name="firefox">
      Use firefox as the backend.
    </flag>
    <flag name="firefox-beta">
      Use firefox-beta as the backend.
    </flag>
    <flag name="webkit">
      Use webkit as the backend.
    </flag>
  </use>
</pkgmetadata>
