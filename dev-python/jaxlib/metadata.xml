  -->
  <use>
    <flag name="cpu">
      Add dependencies for CPU support
    </flag>
    <flag name="cuda">
      Add dependencies for GPU support
    </flag>
    <flag name="hardened">
      Enable upstream hardened flags typically _FORTIFY_SOURCE=1,
      -fstack-protector, Full RELRO
    </flag>
    <flag name="rocm">
      Add dependencies for GPU support
    </flag>
    <flag name="system-llvm">
      Use the system clang/llvm packages instead of the ROCm forks at the
      expense of minor version availability in HIP/ROCm contexts.
    </flag>
  </use>
