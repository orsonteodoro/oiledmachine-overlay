<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- only on the forked version found on oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <maintainer type="person">
    <!-- only on Gentoo's repo -->
    <email>jer@gentoo.org</email>
  </maintainer>
  <longdescription>
    surf is a minimalist web browser that uses extensive use of the keyboard.
    It supports HTML5 and WebKit2GTK as the backend.

    Build time environment variables:

      SAVEDCONFIG_PATH - absolute path to config.h

  </longdescription>
  <upstream>
    <doc lang="en">https://git.suckless.org/surf/file/README.html</doc>
    <!-- for keybindings -->
    <doc lang="en">
      https://git.suckless.org/surf/file/config.def.h.html#l131
    </doc>
    <!-- see https://git.suckless.org/surf/file/LICENSE.html for a full list
    of maintainers -->
    <maintainer type="person" status="active">
      <email>quinq@fifth.space</email>
      <name>Quentin Rameau</name>
    </maintainer>
  </upstream>
  <use>
    <flag name="geolocation">Adds geolocation support.</flag>
    <flag name="libnotify">Enables use of notifications.</flag>
    <flag name="mod_adblock">Adds adblocking support.</flag>
    <flag name="mod_adblock_spam404">Adds adblocking with Spam404 lists.</flag>
    <flag name="mod_adblock_easylist">Adds adblocking with EasyList lists.</flag>
    <flag name="mod_autoopen">Adds xdg open support.</flag>
    <flag name="mod_link_hints">Adds link hinting support.</flag>
    <flag name="mod_searchengines">Adds custom search engine keyword searching
      support.</flag>
    <flag name="mod_simple_bookmarking_redux">Adds bookmarking support.</flag>
    <flag name="pointer-lock">Enables pointer lock for webapps used for
      games or first person simulators.</flag>
    <flag name="pulseaudio">Adds PulseAudio and microphone support.</flag>
    <flag name="savedconfig">Without a saved config.h, this package depends on
      <pkg>net-misc/curl</pkg> and <pkg>x11-terms/st</pkg> for a default
      download mechanism</flag>
    <flag name="v4l">Adds camera support.</flag>
  </use>
</pkgmetadata>
