<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "https://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="project">
    <!-- Ebuild originators -->
    <email>gstreamer@gentoo.org</email>
    <name>GStreamer package maintainers</name>
  </maintainer>
  <longdescription lang="en">
    This package pulls in various gstreamer plugins based on USE flags.  It's
    intended to be used as a runtime-depend for apps that need various gstreamer
    plugins.  This will allow USE flags to be changed without re-compiling apps,
    since gstreamer plugins are all run-time dependencies.
  </longdescription>
  <use>
    <flag name="av1">
      Fallback to CPU based AV1 video support
    </flag>
    <flag name="aac">
      AAC audio support
    </flag>
    <flag name="cdda">
      CD Digital Audio support
    </flag>
    <flag name="dts">
      DTS video support
    </flag>
    <flag name="dv">
      Video camera support
    </flag>
    <flag name="dvb">
      DVB (digital television) support
    </flag>
    <flag name="dvd">
      DVD support
    </flag>
    <flag name="ffmpeg">
      Decode support for ffmpeg supported formats
    </flag>
    <flag name="flac">
      Lossless audio support
    </flag>
    <flag name="fluidsynth">
      Use FluidSynth for MIDI decode.
    </flag>
    <flag name="gme">
      GME (Game Music Emulators) support
    </flag>
    <flag name="gsm">
      GSM voice codec support
    </flag>
    <flag name="dash">
      DASH support
    </flag>
    <flag name="hls">
      HLS support
    </flag>
    <flag name="http">
      HTTP support
    </flag>
    <flag name="jack">
      Low latency music production support
    </flag>
    <flag name="jpeg">
      Fallback to CPU based JPEG image support
    </flag>
    <flag name="lame">
      MP3 encode support
    </flag>
    <flag name="libass">
      SSA/ASS subtitle support
    </flag>
    <flag name="libvisual">
      Enable visualization effects via <pkg>media-libs/libvisual</pkg>
    </flag>
    <flag name="midi">
      MIDI files support
    </flag>
    <flag name="modplug">
      1980s/1990s MOD/XM/IT/S3M/STM audio support
    </flag>
    <flag name="mp3">
      MP3 audio decode support
    </flag>
    <flag name="mpeg">
      Fallback to CPU based MPEG2 video support
    </flag>
    <flag name="nvcodec">
      Enable hardware accelerated AV1, H.264, H.265, JPEG, VP8, VP9, resize for
      NVIDIA® GPUs.
    </flag>
    <flag name="openal">
      OpenAL support
    </flag>
    <flag name="openjpeg">
      JPEG2000 image support
    </flag>
    <flag name="opus">
      General purpose audio codec support
    </flag>
    <flag name="oss">
      Legacy sound driver support
    </flag>
    <flag name="png">
      PNG image support
    </flag>
    <flag name="pulseaudio">
      Pulseaudio audio system support
    </flag>
    <flag name="qsv">
      Enable hardware accelerated AV1, H.264, H.265, JPEG, VP9 for Intel®
      supported CPUs or GPUs.
    </flag>
    <flag name="sndfile">
      Partial compatibility for libsndfile formats which includes

      * Berkeley/IRCAM/CARL
      * Sphere NIST format
      * Ensoniq PARIS file format
      * Midi Sample Dump Standard
      * Amiga IFF / SVX8 / SV16 format
      * VOC files
      * Sonic Foundry's 64 bit RIFF/WAV
      * Fasttracker 2 Extended Instrument
      * RF64 WAV file

    </flag>
    <flag name="sndio">
      Lightweight audio and MIDI server support via sndio
    </flag>
    <flag name="speex">
      Speech codec support
    </flag>
    <flag name="svg">
      Vector images support
    </flag>
    <flag name="taglib">
      Metatags support
    </flag>
    <flag name="v4l">
      Webcam support
    </flag>
    <flag name="vaapi">
      Hardware acceleration support for codecs, images, and image/video
      processing.

      Support AV1, H.264, H.265, JPEG, MPEG2, VC-1, VP9 if hardware support 
      available.
    </flag>
    <flag name="vcd">
      CDR video support
    </flag>
    <flag name="vpx">
      Fallback to CPU based VP8/VP9 support.
    </flag>
    <flag name="wavpack">
      Lossless audio support
    </flag>
    <flag name="webp">
      WebP Image support
    </flag>
    <flag name="wildmidi">
      Use WildMIDI for MIDI decode.
    </flag>
    <flag name="x264">
      Fallback to CPU based H.264 support.
    </flag>
    <flag name="x265">
      Fallback to CPU based H.265 support.
    </flag>
  </use>
</pkgmetadata>
