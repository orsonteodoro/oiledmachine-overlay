@@ -127,6 +127,7 @@ if(NOT __AOTRITON_INCLUDED)
   endfunction()
 
   # Note it is INSTALL"ED"
+  option(AOTRITON_OFFLINE_INSTALL "Use aotriton offline install?" ON)
   if(DEFINED ENV{AOTRITON_INSTALLED_PREFIX})
     install(DIRECTORY
             $ENV{AOTRITON_INSTALLED_PREFIX}/lib
@@ -134,6 +135,30 @@ if(NOT __AOTRITON_INCLUDED)
             DESTINATION ${__AOTRITON_INSTALL_DIR})
     set(__AOTRITON_INSTALL_DIR "$ENV{AOTRITON_INSTALLED_PREFIX}")
     message(STATUS "Using Preinstalled AOTriton at ${__AOTRITON_INSTALL_DIR}")
+  elseif(AOTRITON_OFFLINE_INSTALL)
+    set(__AOTRITON_SOURCE_DIR "${PROJECT_SOURCE_DIR}/third_party/aotriton")
