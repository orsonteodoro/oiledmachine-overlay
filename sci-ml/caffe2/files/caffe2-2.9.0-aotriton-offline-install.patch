+    ExternalProject_Add(aotriton_external
+      SOURCE_DIR ${__AOTRITON_SOURCE_DIR}
+      BINARY_DIR ${__AOTRITON_BUILD_DIR}
+      PREFIX ${__AOTRITON_INSTALL_DIR}
+      CMAKE_ARGS -DCMAKE_INSTALL_PREFIX:PATH=${__AOTRITON_INSTALL_DIR}
