<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <upstream>
    <bugs-to>https://github.com/godotengine/godot-cpp/issues</bugs-to>
    <remote-id type="github">godotengine/godot-cpp</remote-id>
  </upstream>
  <use>
    <flag name="debug-export-template-plugin">
      Add support for game developer debug builds.
    </flag>
    <flag name="debug-game-engine">
      Add support for game engine debug builds.
    </flag>
    <flag name="editor-plugin">
      Add editor plugin support.
    </flag>
    <flag name="fp64">
      Use 64-bit double float support.
    </flag>
  </use>
  <slots>
    <!--
    More fine-grained slotting primarily for language support.
    Stable versions only to minimize project upgrade issues.
    -->
    <slot name="3.6">
      For compatibility with 3.6.x projects, GDNative based projects.
    </slot>
    <slot name="4.3">
      For compatibility with 4.3.x projects, GDExtension based projects.
    </slot>
    <slot name="4.4">
      For compatibility with 4.4.x projects, GDExtension based projects.
    </slot>
    <slot name="4.5">
      For compatibility with 4.5.x projects, GDExtension based projects.
    </slot>
  </slots>
</pkgmetadata>
