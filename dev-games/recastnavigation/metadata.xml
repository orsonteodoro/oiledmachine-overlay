<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <!-- Ebuild on the oiledmachine-overlay -->
    <email>orsonteodoro@hotmail.com</email>
    <name>Orson Teodoro</name>
  </maintainer>
  <longdescription>
    Recast is a navigation mesh construction toolset for games.

    Detour is a path-finding and spatial reasoning toolkit.
  </longdescription>
  <upstream>
    <bugs-to>
      https://github.com/recastnavigation/recastnavigation/issues
    </bugs-to>
    <remote-id type="github">recastnavigation/recastnavigation</remote-id>
  </upstream>
  <use>
    <flag name="demo">
      Builds the demo
    </flag>
    <flag name="dt-polyref64">
      Make Detor use 64-bit polyrefs
    </flag>
    <flag name="dt-virtual-queryfilter">
      Use dynamic dispatch in Detor's dtQueryFilter for custom filters
    </flag>
    <flag name="examples">
      Builds examples
    </flag>
    <flag name="fallback-commit">
      Rewinds to the last working commit that doesn't break patches or
      change requirements.
    </flag>
    <flag name="static">
      Builds static libraries
    </flag>
    <flag name="test">
      Performs testing
    </flag>
  </use>
</pkgmetadata>
